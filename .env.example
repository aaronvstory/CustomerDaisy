# CustomerDaisy Environment Variables Template
# ===========================================
# Copy this file to .env and fill in your actual API keys and credentials
# IMPORTANT: Never commit .env files to version control!

# DaisySMS Configuration
# ---------------------
# Get your API key from: https://daisysms.com/
DAISYSMS_API_KEY=your_daisysms_api_key_here
DAISYSMS_BASE_URL=https://daisysms.com/stubs/handler_api.php
DAISYSMS_SERVICE_CODE=ac
DAISYSMS_MAX_PRICE=0.50
DAISYSMS_VERIFICATION_TIMEOUT=180
DAISYSMS_POLLING_INTERVAL=3

# Mail.tm Configuration
# --------------------
MAILTM_BASE_URL=https://api.mail.tm
MAILTM_DEFAULT_PASSWORD=your_secure_password_here
MAILTM_EMAIL_DIGITS=2
MAILTM_DOMAIN_CACHE_DURATION=3600

# MapQuest Configuration
# ---------------------
# Get your API key from: https://developer.mapquest.com/
MAPQUEST_API_KEY=your_mapquest_api_key_here
MAPQUEST_BASE_URL=https://www.mapquestapi.com
MAPQUEST_DEFAULT_RADIUS_MILES=10.0
MAPQUEST_ENABLE_ADDRESS_VALIDATION=true
MAPQUEST_ENABLE_AUTO_COMPLETE=true

# Customer Generation Settings
# ---------------------------
CUSTOMER_GENDER_PREFERENCE=female

# Database Configuration
# ---------------------
DATABASE_DATA_DIRECTORY=customer_data
DATABASE_BACKUP_DIRECTORY=backups
DATABASE_AUTO_BACKUP=true
DATABASE_BACKUP_INTERVAL_HOURS=6

# Logging Configuration
# --------------------
LOG_DIRECTORY=logs
LOG_LEVEL=INFO
LOG_MAX_SIZE_MB=100
LOG_RETENTION_DAYS=30
LOG_ENABLE_API_LOGGING=true
LOG_ENABLE_SMS_LOGGING=true

# Performance Settings
# -------------------
PERFORMANCE_BATCH_SIZE=5
PERFORMANCE_RATE_LIMIT_DELAY_MIN=2
PERFORMANCE_RATE_LIMIT_DELAY_MAX=5
PERFORMANCE_BATCH_DELAY_MIN=30
PERFORMANCE_BATCH_DELAY_MAX=60
PERFORMANCE_MAX_CONCURRENT_VERIFICATIONS=10

# UI Configuration
# ---------------
UI_CONSOLE_WIDTH=120
UI_REFRESH_RATE=1
UI_THEME=dark
UI_ENABLE_ANIMATIONS=true
UI_SHOW_PROGRESS_BARS=true

# Notification Settings
# --------------------
NOTIFICATIONS_ENABLE=false
NOTIFICATIONS_WEBHOOK=
NOTIFICATIONS_ON_SUCCESS=true
NOTIFICATIONS_ON_FAILURE=true